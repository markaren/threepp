{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "threepp",
  "dependencies": [],
  "features": {
    "external-glfw": {
      "description": "Install external GLFW",
      "dependencies": [
        {
          "name": "glfw3",
          "platform": "!wasm32"
        }
      ]
    },
    "assimp": {
      "description": "Enable assimp model importer in examples",
      "dependencies": [
        "assimp"
      ]
    },
    "imgui": {
      "description": "Enable user interfaces in examples",
      "dependencies": [
        {
          "name": "imgui",
          "features": [
            "glfw-binding",
            "opengl3-binding"
          ]
        }
      ]
    },
    "physx": {
      "description": "Enable physx in examples",
      "dependencies": [
        "physx"
      ]
    },
    "curl": {
      "description": "Enable curl in examples",
      "dependencies": [
        "curl"
      ]
    }
  }
}
