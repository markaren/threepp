{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "threepp",
  "dependencies": [],
  "default-features": [
    "glfw"
  ],
  "features": {
    "glfw": {
      "description": "Build with GLFW front-end",
      "dependencies": [
        {
          "name": "glfw3",
          "platform": "!wasm32"
        }
      ]
    },
    "assimp": {
      "description": "Enable assimp model importer",
      "dependencies": [
        "assimp"
      ]
    },
    "imgui": {
      "description": "Enable user interfaces in examples",
      "dependencies": [
        {
          "name": "imgui",
          "features": [
            "glfw-binding",
            "opengl3-binding"
          ]
        }
      ]
    }
  }
}
