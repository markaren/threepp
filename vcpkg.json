{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "threepp",
  "dependencies": [
    {
      "name": "glad",
      "features": ["gl-api-41", "extensions"]
    },
    "glfw3",
    "stb"
  ],
  "features": {
    "audio": {
      "description": "Audio support",
      "dependencies": ["miniaudio"]
    },
    "json": {
      "description": "Enable JSON support in library. Required to use Fonts.",
      "dependencies":[
        "nlohmann-json"
      ]
    },
    "bullet": {
      "description": "Enable bullet physics in examples",
      "dependencies": [
        "bullet3"
      ]
    },
    "assimp": {
      "description": "Enable assimp model importer",
      "dependencies": [
        "assimp"
      ]
    },
    "imgui": {
      "description": "Enable user interfaces in examples",
      "dependencies": [
        {
          "name": "imgui",
          "features": ["glfw-binding", "opengl3-binding"]
        }
      ]
    },
    "pugixml": {
      "description": "Enable SVGLoader",
      "dependencies": [
        "pugixml"
      ]
    },
    "opencv": {
      "description": "Enable OpenCV in examples",
      "dependencies": ["opencv"]
    }
  }
}
