{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "threepp",
  "dependencies": [
    {
      "name": "glad",
      "features": ["gl-api-41"]
    },
    "glfw3",
    "stb"
  ],
  "features": {
    "bullet": {
      "description": "Enable bullet physics in examples",
      "dependencies": [
        "bullet3"
      ]
    },
    "assimp": {
      "description": "Enable assimp model importer",
      "dependencies": [
        "assimp"
      ]
    }
  }
}
